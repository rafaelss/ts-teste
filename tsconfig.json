{
  "compileOnSave": false,
  "include": [
    "index.ts",
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "dist",
    "typeRoots": ["./node_modules/@types"],
    "lib": ["dom", "es2015", "es2016"]
  }
}
